#include <iostream>
#include <math.h>
#include <string>
using namespace std;

//Calculations related to circles!!
int main () {
	float radius, circumference, area, volume;
	cout << "write a value for radius in cm!:  " ;
	cin >> radius;
	circumference = 2*3.14*radius;
	cout << "the circumference measures: " << circumference << "cm" << endl;
	area = 3.14*pow(radius,2);
	cout << "the area measures: " << area << "cm2" << endl;
	volume = 4*3.14*pow(radius,3)/3;
	cout << "the volume measures: " << volume << "cm3";
	
	return 0;
}
