#include <iostream>
using namespace std;

int main() {
   
     //beggining
   int inteiro1, inteiro2, resto, soma;
   cout << "escreva um valor para o primeiro numero: ";
   cin >> inteiro1;
   cout << "escreva um valor para o segundo numero: ";
   cin >> inteiro2;
   resto = inteiro1 % 2;
   
    if (resto != 0) {
        soma = inteiro2;
    }    
         //loop
        while (inteiro1 != 1) {
        inteiro1 = inteiro1/2;
        inteiro2 = inteiro2 * 2;
        resto = inteiro1 % 2;
       
            if (resto != 0) {
            soma = soma + inteiro2;
            }
        }    
   
    cout << "o valor da multiplicacao e: " << soma;
   
   

    return 0;
}
