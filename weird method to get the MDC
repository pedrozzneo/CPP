#include <iostream>
using namespace std;

int main() {
   
    //beggining
    int dividendo, divisor, antdivisor, resto;
    cout << "escreva o valor do dividendo (inteiro) ";
    cin >> dividendo;
    cout << "escreva o valor do divisor (inteiro) ";
    cin >> divisor;
    resto = 1;
   
    //loop
    while (resto > 0) {
        resto = dividendo % divisor;
        antdivisor = divisor;
        dividendo = divisor;
        divisor = resto;
       
    }
   
    cout << "o MDC vale: " << antdivisor;
